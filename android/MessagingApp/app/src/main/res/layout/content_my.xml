<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/parentLayoutPanel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_dark_material_light"
        android:elevation="4dp"
        android:gravity="center"
        android:id="@+id/chat_name"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00"
        android:textSize="40dp"
        android:layout_marginBottom="50dp"
        android:padding="5dp" />
    </LinearLayout>
    <team22.messagingapp.MessageScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:layout_gravity="bottom"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:gravity="bottom"
            android:id="@+id/message_holder"
            android:orientation="vertical">

        </LinearLayout>
    </team22.messagingapp.MessageScrollView>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5">
        <EditText android:id="@+id/edit_message"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0.8"
            android:maxLength="2000"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="10"
            android:hint="@string/edit_message" />

        <Button
            android:id="@+id/send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_send"
            android:layout_weight="0.1"
            android:onClick="sendMessage" />
        <Button
            android:id="@+id/receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_receive"
            android:layout_weight="0.1"
            android:onClick="receiveMessage"/>
    </LinearLayout>

</LinearLayout>